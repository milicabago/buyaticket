<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#241E20"
    android:backgroundTintMode="src_over"
    app:barrierAllowsGoneWidgets="false"
    tools:context=".HelloActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewNav"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:shadowColor="#E1E1E1"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="5"
            android:text="Favorites"
            android:textAlignment="viewStart"
            android:textColor="#17D2A0"
            android:textSize="38sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="#FBF1F1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewColic"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="6"
                    android:src="@drawable/image"
                    app:srcCompat="@drawable/colic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextPerformer"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Izvodac"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="date"
                        android:inputType="date"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/editTextPrice"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="price"
                        android:inputType="numberDecimal"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/editTextLocation"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Lokacija"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#16EB87"
                        android:backgroundTintMode="src_over"
                        android:fadingEdge="vertical"
                        android:text="Add to cart"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewHeart12"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/heart__1_" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="#FBF1F1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewPrija"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="6"
                    android:src="@drawable/image"
                    app:srcCompat="@drawable/prija" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextPerformer"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Izvodac"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="date"
                        android:inputType="date"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/editTextPrice"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="price"
                        android:inputType="numberDecimal"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/editTextLocation"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Lokacija"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#16EB87"
                        android:backgroundTintMode="src_over"
                        android:fadingEdge="vertical"
                        android:text="Add to cart"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewHeart12"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/heart__1_" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="#FBF1F1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewDino"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="6"
                    android:src="@drawable/image"
                    app:srcCompat="@drawable/dino" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/editTextPerformer"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Izvodac"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="date"
                        android:inputType="date"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/editTextPrice"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="price"
                        android:inputType="numberDecimal"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/editTextLocation"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:text="Lokacija"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#16EB87"
                        android:backgroundTintMode="src_over"
                        android:fadingEdge="vertical"
                        android:text="Add to cart"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewHeart12"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/heart__1_" />

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>